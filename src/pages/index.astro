---
import Layout from '@layouts/Layout.astro';

import CommandPalette from '../components/Landing/CommandPalette';
import ProjectShowcase from '../components/Landing/ProjectShowcase';
import CodeBlock from '../components/Landing/CodeBlock.jsx';
---

<Layout title="Fernando Obregon | Portfolio">
  <section
    class="min-h-screen flex-col-reverse md:flex-row flex justify-center md:justify-between relative background-pattern pb-[10vh]"
  >
    <div class="half w-full md:w-1/2 md:h-screen flex relative">
      <div class="p-4 grid place-items-center">
        <h1
          class="text-3xl md:text-5xl font-semibold md:place-self-end uppercase"
        >
          FeernandoOFF
        </h1>
        <figure class="lg:translate-x-[20%] md:place-self-start w-full">
          <img src="/assets/desktop.svg" alt="" class="w-full" />
        </figure>
      </div>
    </div>
    <div class="w-full lg:w-1/2 md:min-h-screen grid place-items-center">
      <CodeBlock />
    </div>
    <img
      src="/assets/main-gradient.png"
      alt=""
      class="absolute w-screen top-[30vh] right-0 -z-10"
    />
    <!-- <div class="absolute w-screen h-screen opacity-0 my-glass"></div> -->
    <div
      class="absolute w-screen bottom-0 h-20 bg-gradient-to-t from-[#141B2F] to-transparent"
    >
    </div>
  </section>
  <section class="bg-[#141B2F] p-8">
    <div class="max-w-xl mx-auto">
      <h2 class="text-5xl font-bold md:place-self-end mb-10">About</h2>
      <p>
        I'm a University Student, a self-taught Full Stack Web Developer, and a
        technical-minded Entrepreneur.
      </p>
      <ul class="pl-4 list-disc">
        <li class="my-4">
          As a Student, I'm currently pursuing a Bachelor of Digital Design and
          Interactive Technologies at the IT University of Copenhagen.
        </li>
        <li class="my-4">
          As a Student, I'm currently pursuing a Bachelor of Digital Design and
          Interactive Technologies at the IT University of Copenhagen.
        </li>
        <li class="my-4">
          As a Student, I'm currently pursuing a Bachelor of Digital Design and
          Interactive Technologies at the IT University of Copenhagen.
        </li>
      </ul>
    </div>
  </section>
  <section class="min-h-screen background-pattern relative pt-[20vh]">
    <div
      class="absolute w-screen top-0 h-20 bg-gradient-to-b from-[#141B2F] to-transparent"
    >
    </div>
    <div class="skills w-4/5 mx-auto pb-20">
      <img src="/assets/skills.png" alt="" class="max-w-[100px]" />
      <p class="text-[#818CF8] font-semibold text-md my-5">What I can build</p>
      <ProjectShowcase client:visible />
    </div>
    <div
      class="absolute w-screen bottom-0 h-20 bg-gradient-to-t from-[#141B2F] to-transparent"
    >
    </div>
  </section>
  <section
    class="min-h-screen grid place-items-center content-end mb-[20vh]"
    style="background:url('/assets/layered-waves-haikei.svg'); background-size: cover;  background-repeat: no-repeat;"
  >
    <div class="flex flex-col md:flex-row gap-16 mt-[60vh]">
      <ul class="steps steps-vertical">
        <li data-content="?" class="step step-neutral">Step 1</li>
        <li data-content="!" class="step step-neutral">Step 2</li>
        <li data-content="✓" class="step step-neutral">Step 3</li>
        <li data-content="✕" class="step step-neutral">Step 4</li>
        <li data-content="★" class="step step-neutral">Step 5</li>
        <li data-content="" class="step step-neutral">Step 6</li>
        <li data-content="●" class="step step-neutral">Step 7</li>
      </ul>
      <div class="">
        <p>Testimonials</p>
        <div class="flex flex-nowrap overflow-hidden">
          <div
            class="carousel carousel-center w-full md:max-w-[40vw] p-4 space-x-4 rounded-box"
          >
            <div class="carousel-item">
              <img
                src="https://placeimg.com/250/180/arch"
                class="rounded-box"
              />
            </div>
            <div class="carousel-item">
              <img
                src="https://placeimg.com/250/180/arch"
                class="rounded-box"
              />
            </div>
            <div class="carousel-item">
              <img
                src="https://placeimg.com/250/180/arch"
                class="rounded-box"
              />
            </div>
            <div class="carousel-item">
              <img
                src="https://placeimg.com/250/180/arch"
                class="rounded-box"
              />
            </div>
            <div class="carousel-item">
              <img
                src="https://placeimg.com/250/180/arch"
                class="rounded-box"
              />
            </div>
            <div class="carousel-item">
              <img
                src="https://placeimg.com/250/180/arch"
                class="rounded-box"
              />
            </div>
            <div class="carousel-item">
              <img
                src="https://placeimg.com/250/180/arch"
                class="rounded-box"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <CommandPalette />
</Layout>

<style>
  .my-glass {
    backdrop-filter: blur(5px);
    -webkit-backdrop-filter: blur(5px);
  }
  @media screen and (min-width: 1024px) {
    .background-shape {
      background-image: url('/assets/shape.svg');
      background-size: contain;
      background-repeat: no-repeat;
    }
  }
</style>
