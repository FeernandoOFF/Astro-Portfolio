					<figure class="lg:translate-x-[20%] md:place-self-start">
						<img src="/assets/desktop.svg" alt="" />
					</figure>
				</div>
			</div>
			<div
				class="w-full lg:w-1/2 md:min-h-screen my-glass grid place-items-center"
			>
				<CodeBlock />
			</div>
			<img
				src="/assets/main-gradient.png"
				alt=""
				class="absolute w-screen top-[30vh] right-0 -z-10"
			/>
