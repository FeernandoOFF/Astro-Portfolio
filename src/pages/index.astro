import MainHead from "../components/MainHead.astro";
import CodeBlock from "../components/Landing/CodeBlock.jsx";
---

<html lang="en">
	<head>
		<MainHead title="Home page | Feernandooff" />
	</head>
	<body>
		<main
			class="min-h-screen flex-col-reverse md:flex-row flex justify-center md:justify-between relative background-pattern"
		>
			<div class="half w-full md:w-1/2 md:h-screen flex md:bg-[#141B2F]">
