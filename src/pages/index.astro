---
import Nav from "../components/Nav/index.jsx";
import MainHead from "../components/MainHead.astro";
import CodeBlock from "../components/Landing/CodeBlock.jsx";
---

<html lang="en">
	<head>
		<MainHead title="Home page | Feernandooff" />
